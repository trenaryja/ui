{
  "name": "@trenaryja/ui",
  "version": "0.0.1-18",
  "description": "",
  "author": "Justin Trenary",
  "license": "MIT",
  "type": "module",
  "homepage": "https://trenaryja.github.io/ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/trenaryja/ui.git"
  },
  "scripts": {
    "dev": "concurrently \"pnpm:build --watch\" \"pnpm:storybook\"",
    "test": "concurrently -g --timings \"pnpm:lint\" \"pnpm:format\" \"pnpm:treeshake\" \"pnpm:tsc\" \"pnpm:build\" \"pnpm:build-storybook\"",
    "build": "tsup --onSuccess \"yalc publish\"",
    "tsc": "tsc",
    "lint": "eslint --ignore-path .gitignore \"{src,tests}/**/*.+(ts|js|tsx)\" --fix",
    "format": "pnpm lint --fix && prettier --write . \"!pnpm-lock.yaml\"",
    "treeshake": "pnpm build && agadoo",
    "storybook": "storybook dev -p 6006 --quiet",
    "build-storybook": "storybook build",
    "release": "pnpm build && release-it --",
    "get-latest": "pnpm up -L -i -r"
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./css": {
      "import": "./dist/index.css"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@storybook/addon-essentials": "^8.0.8",
    "@storybook/manager-api": "^8.0.8",
    "@storybook/react": "^8.0.8",
    "@storybook/react-vite": "^8.0.8",
    "@storybook/theming": "^8.0.8",
    "@tailwindcss/typography": "^0.5.12",
    "@types/chroma-js": "^3.1.1",
    "@types/node": "24.0.13",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@typescript-eslint/eslint-plugin": "7.6.0",
    "@vitejs/plugin-react": "^4.2.1",
    "agadoo": "^3.0.0",
    "autoprefixer": "^10.4.19",
    "clsx": "^2.1.0",
    "concurrently": "9.2.0",
    "daisyui": "^4.10.1",
    "eslint": "8.57.0",
    "postcss": "^8.4.38",
    "prettier": "3.6.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^10.1.0",
    "release-it": "17.2.0",
    "storybook": "^8.0.8",
    "tailwind-merge": "^2.2.2",
    "tailwindcss": "^3.4.3",
    "tsup": "8.5.0",
    "typescript": "5.8.3",
    "vite": "^5.2.8",
    "yalc": "1.0.0-pre.53"
  },
  "dependencies": {
    "@radix-ui/react-slider": "^1.1.2",
    "chroma-js": "^3.1.2",
    "honeycomb-grid": "^4.1.5"
  },
  "peerDependencies": {
    "react": ">=19",
    "react-dom": ">=19"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "treeshake": true,
    "sourcemap": true,
    "minify": true,
    "clean": true,
    "dts": true,
    "splitting": true,
    "format": [
      "esm"
    ]
  }
}
