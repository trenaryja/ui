{
	"name": "@trenaryja/ui",
	"version": "0.0.1-19",
	"description": "",
	"author": "Justin Trenary",
	"license": "MIT",
	"type": "module",
	"homepage": "https://ui.trenary.dev",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/trenaryja/ui.git"
	},
	"scripts": {
		"dev": "concurrently \"pnpm:build --watch\" \"pnpm:storybook\"",
		"test": "concurrently -g --timings \"pnpm:lint\" \"pnpm:treeshake\" \"tsc\" \"pnpm:build\" \"pnpm:build-storybook\"",
		"build": "tsup",
		"lint": "eslint .",
		"format": "prettier -w . !\"pnpm-lock.yaml\"",
		"treeshake": "pnpm build && agadoo",
		"storybook": "storybook dev -p 6006 --quiet",
		"build-storybook": "storybook build",
		"release": "pnpm build && release-it --",
		"get-latest": "pnpm up -L -i -r",
		"analyze": "pnpm dlx source-map-explorer dist/index.js"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"browser": "./dist/index.css",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./css": "./dist/index.css"
	},
	"files": [
		"dist"
	],
	"devDependencies": {
		"@storybook/addon-themes": "^9.1.4",
		"@storybook/react-vite": "^9.1.4",
		"@tailwindcss/postcss": "^4.1.12",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.12",
		"@types/chroma-js": "^3.1.1",
		"@types/node": "^24.3.0",
		"@types/react": "^19.1.12",
		"@types/react-dom": "^19.1.9",
		"@vitejs/plugin-react": "^5.0.2",
		"agadoo": "^3.0.0",
		"clsx": "^2.1.1",
		"concurrently": "^9.2.1",
		"daisyui": "^5.1.6",
		"eslint": "^9.34.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-storybook": "^9.1.4",
		"prettier": "^3.6.2",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-markdown": "^10.1.0",
		"release-it": "^19.0.4",
		"storybook": "^9.1.4",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.12",
		"tsup": "^8.5.0",
		"type-fest": "^4.41.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.42.0",
		"vite": "^7.1.4"
	},
	"dependencies": {
		"@radix-ui/react-slider": "^1.3.6",
		"chroma-js": "^3.1.2",
		"honeycomb-grid": "^4.1.5",
		"remeda": "^2.30.0"
	},
	"peerDependencies": {
		"react": ">=19",
		"react-dom": ">=19",
		"tailwindcss": ">=4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@tailwindcss/oxide",
			"esbuild"
		]
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"printWidth": 120,
		"jsxSingleQuote": true,
		"useTabs": true
	},
	"release-it": {
		"git": {
			"commitMessage": "chore(release): v${version}"
		},
		"github": {
			"release": true
		},
		"npm": {
			"publish": false
		}
	},
	"tsup": {
		"clean": true,
		"dts": true,
		"entry": [
			"src/index.ts"
		],
		"format": "esm",
		"minify": true,
		"sourcemap": true,
		"treeshake": true,
		"onSuccess": "cp src/index.css dist/index.css"
	}
}
