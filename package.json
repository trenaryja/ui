{
  "name": "@trenaryja/ui",
  "version": "0.0.1-16",
  "description": "",
  "author": "Justin Trenary",
  "license": "MIT",
  "type": "module",
  "homepage": "https://trenaryja.github.io/ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/trenaryja/ui.git"
  },
  "scripts": {
    "dev": "concurrently \"pnpm run build --watch\" \"pnpm run storybook\"",
    "build": "tsup --onSuccess \"yalc publish\"",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore \"{src,tests}/**/*.+(ts|js|tsx)\"",
    "format": "pnpm run lint --fix && prettier --write . \"!pnpm-lock.yaml\"",
    "storybook": "storybook dev -p 6006 --quiet",
    "build-storybook": "storybook build",
    "deploy-storybook": "storybook-to-ghpages",
    "release": "pnpm run build && dotenv release-it --"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@storybook/addon-essentials": "7.6.10",
    "@storybook/addons": "^7.6.10",
    "@storybook/react": "7.6.10",
    "@storybook/react-vite": "^7.6.10",
    "@storybook/storybook-deployer": "2.8.16",
    "@storybook/theming": "^7.6.10",
    "@tailwindcss/typography": "^0.5.10",
    "@types/chroma-js": "^2.4.3",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "autoprefixer": "^10.4.17",
    "clsx": "^2.1.0",
    "concurrently": "8.2.2",
    "daisyui": "^4.6.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "8.56.0",
    "postcss": "^8.4.33",
    "prettier": "3.2.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^9.0.1",
    "release-it": "17.0.1",
    "storybook": "7.6.10",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.1",
    "tsup": "8.0.1",
    "typescript": "5.3.3",
    "yalc": "1.0.0-pre.53"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-slider": "^1.1.2",
    "chroma-js": "^2.4.2",
    "honeycomb-grid": "^4.1.5"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "treeshake": true,
    "sourcemap": true,
    "minify": true,
    "clean": true,
    "dts": true,
    "splitting": true,
    "format": [
      "cjs",
      "esm"
    ]
  }
}
