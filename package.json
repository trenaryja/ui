{
  "name": "@trenaryja/ui",
  "version": "0.0.1-15",
  "description": "",
  "author": "Justin Trenary",
  "license": "MIT",
  "type": "module",
  "homepage": "https://trenaryja.github.io/ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/trenaryja/ui.git"
  },
  "scripts": {
    "dev": "concurrently \"pnpm run build --watch\" \"pnpm run storybook\"",
    "build": "tsup --onSuccess \"yalc publish\"",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore \"{src,tests}/**/*.+(ts|js|tsx)\"",
    "format": "pnpm run lint --fix && prettier --write .",
    "storybook": "storybook dev -p 6006 --quiet",
    "build-storybook": "storybook build",
    "deploy-storybook": "storybook-to-ghpages",
    "release": "pnpm run build && dotenv release-it --"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@storybook/addon-essentials": "7.4.6",
    "@storybook/addons": "^7.4.6",
    "@storybook/react": "7.4.6",
    "@storybook/react-vite": "^7.4.6",
    "@storybook/storybook-deployer": "2.8.16",
    "@storybook/theming": "^7.4.6",
    "@tailwindcss/typography": "^0.5.10",
    "@types/chroma-js": "^2.4.1",
    "@types/node": "20.8.4",
    "@types/react": "18.2.27",
    "@types/react-dom": "18.2.12",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "autoprefixer": "^10.4.16",
    "concurrently": "8.2.1",
    "csstype": "^3.1.2",
    "dotenv-cli": "^7.3.0",
    "eslint": "8.51.0",
    "postcss": "^8.4.31",
    "prettier": "3.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^9.0.0",
    "release-it": "16.2.1",
    "storybook": "7.4.6",
    "tailwindcss": "^3.3.3",
    "tsup": "7.2.0",
    "typescript": "5.2.2",
    "yalc": "1.0.0-pre.53"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@mantine/core": "^6.0.21",
    "@mantine/hooks": "^6.0.21",
    "@radix-ui/react-slider": "^1.1.2",
    "chroma-js": "^2.4.2",
    "honeycomb-grid": "^4.1.4"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "treeshake": true,
    "sourcemap": true,
    "minify": true,
    "clean": true,
    "dts": true,
    "splitting": true,
    "format": [
      "cjs",
      "esm"
    ]
  }
}
