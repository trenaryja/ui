{
  "name": "@trenaryja/ui",
  "version": "0.0.1-11",
  "description": "",
  "author": "Justin Trenary",
  "license": "MIT",
  "type": "module",
  "homepage": "https://trenaryja.github.io/ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/trenaryja/ui.git"
  },
  "scripts": {
    "dev": "concurrently \"pnpm run build --watch\" \"pnpm run storybook\"",
    "build": "tsup --onSuccess \"yalc publish\"",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore \"{src,tests}/**/*.+(ts|js|tsx)\"",
    "format": "pnpm run lint --fix && prettier --write .",
    "storybook": "storybook dev -p 6006 --quiet",
    "build-storybook": "storybook build",
    "deploy-storybook": "storybook-to-ghpages",
    "release": "pnpm run build && dotenv release-it --"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.4",
    "@storybook/addon-essentials": "7.0.2",
    "@storybook/addons": "^7.0.2",
    "@storybook/core-common": "^7.0.2",
    "@storybook/react": "7.0.2",
    "@storybook/react-webpack5": "7.0.2",
    "@storybook/storybook-deployer": "2.8.16",
    "@storybook/theming": "^7.0.2",
    "@types/node": "18.15.11",
    "@types/react": "18.0.33",
    "@types/react-dom": "18.0.11",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "babel-loader": "9.1.2",
    "concurrently": "8.0.1",
    "csstype": "^3.1.2",
    "dotenv-cli": "^7.2.1",
    "eslint": "8.37.0",
    "prettier": "2.8.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^8.0.6",
    "release-it": "15.10.1",
    "storybook": "7.0.2",
    "tsup": "6.7.0",
    "typescript": "5.0.3",
    "yalc": "1.0.0-pre.53"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "trailingComma": "all",
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  },
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "@mantine/core": "^6.0.6",
    "@mantine/hooks": "^6.0.6"
  }
}
