{
	"name": "@trenaryja/ui",
	"version": "0.0.1-18",
	"description": "",
	"author": "Justin Trenary",
	"license": "MIT",
	"type": "module",
	"homepage": "https://trenaryja.github.io/ui",
	"repository": {
		"type": "git",
		"url": "https://github.com/trenaryja/ui.git"
	},
	"scripts": {
		"dev": "concurrently \"pnpm:build --watch\" \"pnpm:storybook\"",
		"test": "concurrently -g --timings \"pnpm:lint\" \"pnpm:treeshake\" \"pnpm:tsc\" \"pnpm:build\" \"pnpm:build-storybook\"",
		"build": "tsup",
		"tsc": "tsc",
		"lint": "eslint . --max-warnings=0",
		"format": "prettier --write \"**/*.{cjs,css,cts,gql,graphql,handlebars,hbs,htm,html,js,json,jsx,less,markdown,md,mdx,mjs,mts,sass,scss,ts,tsx,vue,yaml,yml,}\" !\"pnpm-lock.yaml\"",
		"treeshake": "pnpm build && agadoo",
		"storybook": "storybook dev -p 6006 --quiet",
		"build-storybook": "storybook build",
		"release": "pnpm build && release-it --",
		"get-latest": "pnpm up -L -i -r"
	},
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.js"
		},
		"./css": {
			"import": "./dist/index.css"
		}
	},
	"files": [
		"dist"
	],
	"devDependencies": {
		"@eslint/js": "^9.30.1",
		"@storybook/addon-themes": "^9.0.16",
		"@storybook/react-vite": "^9.0.16",
		"@tailwindcss/postcss": "^4.1.11",
		"@tailwindcss/typography": "^0.5.12",
		"@tailwindcss/vite": "^4.1.11",
		"@types/chroma-js": "^3.1.1",
		"@types/node": "^24.0.13",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitejs/plugin-react": "^4.2.1",
		"agadoo": "^3.0.0",
		"clsx": "^2.1.0",
		"concurrently": "^9.2.0",
		"daisyui": "^5.0.46",
		"eslint": "^9.30.1",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-storybook": "^9.0.16",
		"globals": "^16.3.0",
		"prettier": "^3.6.2",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-markdown": "^10.1.0",
		"release-it": "^19.0.3",
		"storybook": "^9.0.16",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.11",
		"tsup": "^8.5.0",
		"tw-animate-css": "^1.3.5",
		"type-fest": "^4.41.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1",
		"vite": "^7.0.4"
	},
	"dependencies": {
		"@radix-ui/react-slider": "^1.1.2",
		"chroma-js": "^3.1.2",
		"honeycomb-grid": "^4.1.5",
		"remeda": "^2.25.0"
	},
	"peerDependencies": {
		"react": ">=19",
		"react-dom": ">=19"
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"trailingComma": "all",
		"printWidth": 120,
		"jsxSingleQuote": true,
		"useTabs": true
	},
	"release-it": {
		"git": {
			"commitMessage": "chore(release): v${version}"
		},
		"github": {
			"release": true
		},
		"npm": {
			"publish": false
		}
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"treeshake": true,
		"sourcemap": true,
		"minify": true,
		"clean": true,
		"dts": true,
		"format": [
			"esm"
		]
	}
}
